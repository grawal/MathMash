<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:ads="http://schemas.android.com/apk/res-auto"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:background="@color/colorBgLighter"
    android:layout_height="match_parent">

<LinearLayout
    android:layout_width="match_parent"
    android:orientation="horizontal"
    android:gravity="center"
    android:layout_weight="1"
    android:layout_height="1dp">
    <TextView
        android:layout_width="wrap_content"
        android:layout_height="match_parent"
        android:textAppearance="?android:attr/textAppearanceLarge"
        android:text="num1"
        android:textSize="@dimen/question_fontsize_num"
        android:paddingLeft="5dp"
        android:paddingRight="5dp"
        android:textColor="@android:color/holo_green_dark"
        android:textStyle="bold"
        android:gravity="right|center_vertical"
        android:id="@+id/tv_num1"
        android:layout_gravity="center_horizontal|center_vertical" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="match_parent"
        android:gravity="center"
        android:textAppearance="?android:attr/textAppearanceLarge"
        android:paddingLeft="5dp"
        android:paddingRight="5dp"
        android:text="+"
        android:textSize="@dimen/question_fontsize_num"
        android:id="@+id/tv_operation"
        android:layout_gravity="center_horizontal|center_vertical" />

    <TextView
        android:layout_width="wrap_content"
        android:gravity="left|center_vertical"
        android:layout_height="match_parent"
        android:textAppearance="?android:attr/textAppearanceLarge"
        android:paddingLeft="5dp"
        android:paddingRight="5dp"
        android:text="num2"
        android:textColor="@color/colorPrimary"
        android:textStyle="bold"
        android:textSize="@dimen/question_fontsize_num"
        android:id="@+id/tv_num2"
        android:layout_gravity="center_horizontal|center_vertical" />
<!--
</LinearLayout>

<LinearLayout
    android:layout_width="match_parent"
    android:orientation="horizontal"
    android:layout_weight="1"
    android:layout_height="0dp">-->


    <TextView
        android:layout_width="wrap_content"
        android:layout_height="match_parent"
        android:textAppearance="?android:attr/textAppearanceLarge"
        android:paddingLeft="5dp"
        android:paddingRight="5dp"
        android:text="="
        android:textSize="@dimen/question_fontsize_num"
        android:id="@+id/tv_equals"
        android:gravity="center"
        android:layout_gravity="center_horizontal|center_vertical" />
    <EditText
        android:layout_width="100dp"
        android:id="@+id/et_ans"
        android:focusable="false"
        android:background="@drawable/bg_stats_details"
        android:alpha="0.7"
        android:paddingLeft="0dp"
        android:textStyle="bold"
        android:gravity="center"
        android:textColor="@color/colorAccent"
        android:focusableInTouchMode="false"
        android:textSize="@dimen/question_fontsize_num"

        android:layout_marginRight="15dp"
        android:layout_gravity="center_horizontal|center_vertical"
        android:layout_height="wrap_content" />

</LinearLayout>
    <TableLayout
        android:layout_width="match_parent"
        android:layout_weight="4"
        android:layout_height="0dp">

        <TableRow
            android:layout_weight="1"
            android:layout_height="0dp"
            android:paddingTop="@dimen/question_tablepaddingTop">
            <Button
                android:background="@drawable/numberholder"
                android:layout_height="match_parent"
                android:textColor="@color/colorPrimaryDark"
                android:textSize="@dimen/question_fontsize"
                android:layout_marginLeft="10dp"
                android:layout_marginRight="10dp"
                android:id="@+id/btn_one"
                android:layout_weight="1"
                android:layout_gravity="center"
                android:text="1"
                />
            <Button
                android:background="@drawable/numberholder"
                android:layout_height="match_parent"
                android:textColor="@color/colorPrimaryDark"
                android:layout_marginLeft="10dp"
                android:layout_marginRight="10dp"
                android:textSize="@dimen/question_fontsize"
                android:id="@+id/btn_two"
                android:layout_weight="1"
                android:layout_gravity="center"
                android:text="2"
                />
            <Button
                android:background="@drawable/numberholder"
                android:layout_height="match_parent"
                android:layout_marginLeft="10dp"
                android:layout_marginRight="10dp"
                android:textColor="@color/colorPrimaryDark"
                android:layout_weight="1"
                android:textSize="@dimen/question_fontsize"
                android:layout_gravity="center"
                android:text="3"
                android:id="@+id/btn_three"
                />
        </TableRow>

        <TableRow
            android:layout_weight="1"
            android:layout_height="0dp"
            android:paddingTop="@dimen/question_tablepaddingTop">
            <Button
                android:background="@drawable/numberholder"
                android:layout_height="match_parent"
                android:textColor="@color/colorPrimaryDark"
                android:textSize="@dimen/question_fontsize"
                android:layout_marginLeft="10dp"
                android:layout_marginRight="10dp"
                android:layout_weight="1"
                android:layout_gravity="center"
                android:text="4"
                android:id="@+id/btn_four"
                />
            <Button
                android:background="@drawable/numberholder"
                android:layout_height="match_parent"
                android:textColor="@color/colorPrimaryDark"
                android:layout_marginLeft="10dp"
                android:layout_marginRight="10dp"
                android:textSize="@dimen/question_fontsize"
                android:layout_weight="1"
                android:layout_gravity="center"
                android:text="5"
                android:id="@+id/btn_five"
                />
            <Button
                android:background="@drawable/numberholder"
                android:layout_height="match_parent"
                android:layout_marginLeft="10dp"
                android:layout_marginRight="10dp"
                android:textColor="@color/colorPrimaryDark"
                android:layout_weight="1"
                android:textSize="@dimen/question_fontsize"
                android:layout_gravity="center"
                android:text="6"
                android:id="@+id/btn_six"
                />
        </TableRow>

        <TableRow
            android:layout_weight="1"
            android:layout_height="0dp"
            android:paddingTop="@dimen/question_tablepaddingTop">
            <Button
                android:background="@drawable/numberholder"
                android:layout_height="match_parent"
                android:textColor="@color/colorPrimaryDark"
                android:textSize="@dimen/question_fontsize"
                android:layout_marginLeft="10dp"
                android:layout_marginRight="10dp"
                android:layout_weight="1"
                android:layout_gravity="center"
                android:text="7"
                android:id="@+id/btn_seven"
                />
            <Button
                android:background="@drawable/numberholder"
                android:layout_height="match_parent"
                android:textColor="@color/colorPrimaryDark"
                android:layout_marginLeft="10dp"
                android:layout_marginRight="10dp"
                android:textSize="@dimen/question_fontsize"
                android:layout_weight="1"
                android:layout_gravity="center"
                android:text="8"
                android:id="@+id/btn_eight"
                />
            <Button
                android:background="@drawable/numberholder"
                android:layout_height="match_parent"
                android:layout_marginLeft="10dp"
                android:layout_marginRight="10dp"
                android:textColor="@color/colorPrimaryDark"
                android:layout_weight="1"
                android:textSize="@dimen/question_fontsize"
                android:layout_gravity="center"
                android:text="9"
                android:id="@+id/btn_nine"
                />
        </TableRow>
        <TableRow
            android:layout_weight="1"
            android:layout_height="0dp"
            android:paddingTop="@dimen/question_tablepaddingTop"
            android:orientation="vertical">
            <TextView
                android:textSize="@dimen/question_fontsize"
                android:text=" "
                android:layout_marginLeft="20dp"
                android:layout_weight="1"
                android:layout_marginRight="20dp"
                android:layout_height="match_parent"
                />

        <Button
            android:background="@drawable/numberholder"
            android:layout_height="match_parent"
            android:layout_marginLeft="28dp"
            android:layout_marginRight="9dp"
            android:textColor="@color/colorPrimaryDark"
            android:layout_weight="1"
            android:textSize="@dimen/question_fontsize"
            android:layout_gravity="center"
            android:text="0"
            android:id="@+id/btn_zero"
            />
            <Button
                android:layout_height="match_parent"
                android:textColor="@color/colorAccent"
                android:text="C"
                android:layout_weight="1"
                android:id="@+id/btn_clear"
                android:textSize="@dimen/question_fontsize"
                android:background="@drawable/numberholderrect"
                android:layout_marginLeft="10dp"
                android:layout_marginRight="10dp"
                android:layout_gravity="center"

                />


    </TableRow>
    </TableLayout>
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_weight="2"
        android:layout_marginTop="2dp"
        android:gravity="center"
        android:orientation="vertical"
        android:layout_marginLeft="20dp"
        android:layout_marginRight="20dp"
        android:layout_height="0dp">
        <Button
            android:layout_height="0dp"
            android:layout_width="match_parent"
            android:text="CHECK ANSWER"
            android:textColor="@android:color/white"
            android:textStyle="bold"
            android:id="@+id/btn_submit"
            android:background="@drawable/menubtn_green"
            android:layout_weight="1"
            android:textSize="@dimen/question_fontsize_submit"

            />
        <com.google.android.gms.ads.AdView
            android:id="@+id/adView"
            android:layout_width="wrap_content"

            android:layout_height="70dp"
            android:layout_centerHorizontal="true"
            android:layout_alignParentBottom="true"
            ads:adSize="BANNER"
            ads:adUnitId="ca-app-pub-8293122064825612/1301905283">

        </com.google.android.gms.ads.AdView>

    </LinearLayout>
</LinearLayout>